{% layout 'login' %}
<div id="layout">    
  <div class="login-page">
<form class="login-form"  accept-charset="UTF-8" action="{{ '~/account/forgotpassword' | absolute_url }}" method="post" id="recover_customer_password" name="recover_customer_password">


    <h2>Recover your password</h2>

    <div class="form-group">
        <input  class="form-control" id="recover-email" name="Email" required placeholder="Email" />
    </div>
    <div class="form-group">
      <a class="btn btn--white" href="{{ '/account/login' | absolute_url }}">Cancel</a>
      <button style="float: right;" type="submit" class="btn btn--blue">Submit</button>      
    </div>
    {{ antiforgery }}
</form>
</div>

</div>